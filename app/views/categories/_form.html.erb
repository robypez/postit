<%= render 'shared/content_title', title: 'Create new category' %>

<%= render 'shared/message', alert: @category %>

<div class="well">
<%= form_for @category do |f| %>
  <fieldset>
    <div class="control-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <%= f.submit "Save" %>
  </fieldset>
<% end %>

</div>