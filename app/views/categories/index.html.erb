<h3>Category Index</h3>
<div class="row">
  <div class="span12">
<table class="table table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Tools</th>
                  
                </tr>
              </thead>
              <tbody>
                <% @categories.each do |cat| %> 

                 <tr>
                  <td><%=cat.id%></td>
                  <td><%=cat.name%></td>
                  <td><%= link_to "Edit", edit_category_path(cat.id), id: "edit_category", class: "btn btn-primary" %></td>
                  
                </tr>
              <% end %> 
              </tbody>
            </table>
  </div>
</div>